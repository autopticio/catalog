where(@cw_aws)
.what("MetricName='CPU*';InstanceId='*'; Namespace='AWS/EC2'")
.when(24h)
.request($where[0];$what[0];$when[0]).as($data)

.average($data).as($avg)
.min($data).as($min)
.max($data).as($max)
.count($data).as($count)
.percentile($data; 0.25; 0.5; 0.75; 0.99).as($perc)

.chart($avg;$min;$max;$count;$perc;@bar)

.out("stats basics")
