//query cloudwatch and get CPU utilization
where(@cw_aws)
.what("MetricName='CPUUtilization';InstanceId='*'; Namespace='AWS/EC2'")
	.when("start = '01-01-2022 00:00:00 +00'; end = '03-03-2022 23:59:59 +00'")

.window(1h)
        .request($where[0];$what[0];$when[0]).as($ts_cpu)


//compute the 75th percentile summary statistics for the periods 
.percentile($ts_cpu;0.75).as($perc_cpu)

.assert($perc_cpu > 0.5).as($busy_period ; unit='bool')

.print($busy_period)
        .out("cpu period 1")
